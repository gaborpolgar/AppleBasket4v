<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/mainImage1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/carousel_iphone1" />


        <ImageView
            android:id="@+id/mainImage2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/carousel_iphone2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/cardview_default_elevation"
            android:src="@drawable/apple_128_icon"
            />

        <Button
            android:id="@+id/iphoneButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="iPhone" />

        <Button
            android:id="@+id/ipadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IPAD" />

        <Button
            android:id="@+id/macButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MAC" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/cardview_default_elevation"
            android:src="@drawable/search_icon"
            />

        <ImageView
            android:id="@+id/basket"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/cardview_default_elevation"
            android:src="@drawable/basket"
            />



        <ImageView
            android:id="@+id/user"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/cardview_default_elevation"
            android:src="@drawable/user"
            />


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".MainActivity">

                <TextView
            android:id="@+id/iphone_cat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            android:text="Felhasználónév"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ipad_cat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            android:text="email cím"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            android:text="Rendeléseim"
            android:textSize="24sp" />

        <Button
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Kijelentkezés" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <Button
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kapcsolat" />

        <Button
            android:id="@+id/information_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Információk" />

    </LinearLayout>

</LinearLayout>